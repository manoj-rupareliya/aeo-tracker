# Application
APP_ENV=development
DEBUG=true
SECRET_KEY=change-this-to-a-secure-random-string

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database
DATABASE_URL=postgresql://llmscm:llmscm@localhost:5432/llmscm

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
JWT_SECRET_KEY=change-this-to-another-secure-random-string
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# LLM API Keys
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
GOOGLE_API_KEY=your-google-api-key
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key

# LLM Default Models
OPENAI_DEFAULT_MODEL=gpt-4-turbo
ANTHROPIC_DEFAULT_MODEL=claude-3-opus-20240229
GOOGLE_DEFAULT_MODEL=gemini-1.5-pro
PERPLEXITY_DEFAULT_MODEL=llama-3.1-sonar-large-128k-online

# LLM Settings
LLM_DEFAULT_TEMPERATURE=0.7
LLM_DEFAULT_MAX_TOKENS=2000
LLM_REQUEST_TIMEOUT=60
LLM_MAX_RETRIES=3

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Encryption (generate with: python -c "import base64, os; print(base64.urlsafe_b64encode(os.urandom(32)).decode())")
ENCRYPTION_KEY=change-this-to-base64-encoded-32-byte-key

# CORS (comma-separated for multiple origins)
CORS_ORIGINS=http://localhost:3000

# Cache TTL (seconds)
REDIS_CACHE_TTL=604800

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_LLM_CALLS_PER_MINUTE=10
